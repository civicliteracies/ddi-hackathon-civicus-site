---
import { Icon } from 'astro-icon/components'
import { Image } from 'astro:assets'
import {
  Notification
} from 'accessible-astro-components'

/**
 * Hero Component
 *
 * @description A component that displays a hero section with a title, description, and image
 */
interface Props {
  /**
   * The source URL for the image
   */
  src?: string
  src2?: string
}

// const { src = '/astronaut-hero-img.webp' }: Props = Astro.props
const { src = '/logos/logo-ddi-only.png' }: Props = Astro.props
---

<section class="hero my-24">
  <div class="container">
    <div class="grid grid-cols-1 items-center gap-24 lg:grid-cols-1">
      <div class="flex flex-col items-center gap-8 md:items-start">
        <h1 class="text-center text-6xl md:text-left lg:text-8xl">
          <slot><span class="text-gradient">Digital Democracy Initiative</span> Hackathon
        </h1>
        <Notification type="info">
        <Icon name="lucide:info" />
        <p>
          <strong><a href="https://forms.office.com/e/mmXS8is9qp" target="_blank">Sign up here</a></strong> for the Info session on 12 September 2025 to learn more! 
        </p>
      </Notification>
        <div class="flex flex-col gap-3 min-[500px]:flex-row">
          <a class="button has-icon" href="#submit">
            <Icon name="lucide:send" />
            Submit proposal
          </a>
          <a class="button has-icon color-secondary" href="#applicant-guide">
            <Icon name="lucide:book-open-text" />
            Applicant guide
          </a>
          <a class="button has-icon" href="/files/DigitalDemocracyHackathon-OpenCall.pdf" target="_blank">
            <Icon name="lucide:book" />
            Review Application Form
          </a>
        </div>
      </div>
      <!-- <div class="flex flex-center">
        <Image class="hidden lg:block" src={src} alt="" decoding="async" width={300} height={300} loading="eager" />
      </div> -->
      
    </div>
  </div>
</section>

<style lang="scss">
  h1 {
    text-wrap: unset;
  }

  .text-gradient {
    background: linear-gradient(
      315deg,
      light-dark(var(--color-primary-300), var(--color-secondary-100)) 25%,
      light-dark(var(--color-secondary-300), var(--color-primary-200))
    );
    background-clip: border-box;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
</style>
