---
import Image from "astro/components/Image.astro"
---
<section class="py-12 logos-bg">
    <div class="container">
        <div class="grid grid-cols-1 center-content">
            <Image src='/logos/logo-ddi-3.png' alt="" width={900} height={300} loading="eager" class="mt-4 mb-12 hidden lg:block"/>
            <Image src='/logos/logo-ddi-two-lines-3.png' alt="" width={800} height={360} loading="eager" class="mt-4 mb-12 block lg:hidden"/>
        </div>
    <div class="grid grid-cols-1 gap-12 md:grid-cols-3 lg:grid-cols-3 center-content">
        <Image src='/logos/logo-civicus-01.png' alt="" width={160} height={160} loading="eager" />
        <!-- <Image src='/logos/logo-metamorphosis.png' alt="" width={160} height={160} loading="eager" /> -->
        <Image src='/logos/logo-metamorphosis-logo-en-color.png' alt="" width={640} height={160} loading="eager" />
        <Image src='/logos/logo-cli-2-darkbg.png' alt="" width={160} height={160} loading="eager" />
    </div>
    </div>
</section>

<style lang="scss">
  @use '../assets/scss/base/mixins' as *;

  .logos-bg {
    position: relative;
    background-image: linear-gradient(
      315deg,
      light-dark(var(--color-secondary-100), var(--color-primary-100)) 25%,
      light-dark(var(--color-primary-100), var(--color-secondary-200))
    );

    color: var(--color-neutral-900);
  }
</style>